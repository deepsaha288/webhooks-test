pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/deepsaha288/webhooks-test.git'
            }
        }

        stage('Run Python Script') {
            steps {
                // Use full python path if necessary (e.g., C:\\Python39\\python.exe)
                bat 'python detect_changes.py'
            }
        }

        stage('Show Changed Projects') {
            steps {
                script {
                    def changed = readFile('changed_projects.txt').trim()
                    echo "Changed projects:\n${changed}"
                }
            }
        }
    }
}
