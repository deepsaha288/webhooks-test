pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/deepsaha288/webhooks-test.git'
            }
        }
        stage('Show Changes') {
            steps {
                script {
                    def changes = sh(script: "git diff --name-only HEAD HEAD~1", returnStdout: true).trim()
                    echo "Changed files:\n${changes}"
                    echo "Number of changed files: ${changes.split('\n').length}"
                    def changedFiles = changes.split('\n')
                }
            }
        }
    }
}
