pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/deepsaha288/webhooks-test.git'
            }
        }
        stage('Show Changes') {
            steps {
                script {
                    sh 'git fetch origin main'
                    
                    def commitCount = sh(script: 'git rev-list --count HEAD', returnStdout: true).trim().toInteger()
                    
                    if (commitCount > 1) {
                        def changes = sh(script: "git diff --name-only HEAD~1 HEAD", returnStdout: true).trim()
                        
                        // Save the changed files to a file in the workspace
                        writeFile file: 'changed_files.txt', text: changes
                        
                        echo "Changed files:\n${changes}"
                        echo "Number of changed files: ${changes.split('\n').length}"
                    } else {
                        echo "Only one commit exists. No diff available yet."
                    }
                }
            }
        }
    }
}
